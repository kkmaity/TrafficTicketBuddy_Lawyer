<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_16sdp"
    android:layout_marginBottom="@dimen/_16sdp"
    android:background="@color/alice_blue">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:gravity="center"

        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/icon_email_blue"/>
        <EditText
            android:id="@+id/tv_email"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:padding="@dimen/_5sdp"
            android:fontFamily="@font/lato_regular"
            android:layout_marginLeft="@dimen/_12sdp"
            android:textColor="@color/txt_grey"
            android:enabled="false"
            android:text="john.doe@hotmail.com"
            android:background="@android:color/transparent"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:gravity="center"

        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/icon_phone"/>
        <EditText
            android:id="@+id/tv_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:padding="@dimen/_5sdp"
            android:fontFamily="@font/lato_regular"
            android:layout_marginLeft="@dimen/_12sdp"
            android:textColor="@color/txt_grey"
            android:enabled="false"
            android:text="+1-6576-47754"
            android:background="@android:color/transparent"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:gravity="center"

        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/graduation"/>
        <EditText
            android:id="@+id/tv_degree"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:padding="@dimen/_5sdp"
            android:fontFamily="@font/lato_regular"
            android:layout_marginLeft="@dimen/_12sdp"
            android:textColor="@color/txt_grey"
            android:enabled="false"
            android:text="LLB"
            android:background="@android:color/transparent"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center"

        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/icon_country"/>
        <EditText
            android:id="@+id/tv_country"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:padding="@dimen/_5sdp"
            android:fontFamily="@font/lato_regular"
            android:layout_marginLeft="@dimen/_12sdp"
            android:textColor="@color/txt_grey"
            android:enabled="false"
            android:text="Canada"
            android:background="@android:color/transparent"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:gravity="center"

        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/icon_state"/>
        <EditText
            android:id="@+id/tv_state"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:padding="@dimen/_5sdp"
            android:fontFamily="@font/lato_regular"
            android:layout_marginLeft="@dimen/_12sdp"
            android:textColor="@color/txt_grey"
            android:enabled="false"
            android:text="Ontario"
            android:background="@android:color/transparent"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"

        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/icon_city"/>
        <EditText
            android:id="@+id/tv_city"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:padding="@dimen/_5sdp"
            android:fontFamily="@font/lato_regular"
            android:layout_marginLeft="@dimen/_12sdp"
            android:textColor="@color/txt_grey"
            android:enabled="false"
            android:text="Toronto"
            android:background="@android:color/transparent"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="center"
                android:src="@drawable/certificate"/>
            <EditText

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/lato_regular"
                android:layout_marginLeft="@dimen/_12sdp"
                android:textColor="@color/txt_grey"
                android:enabled="false"
                android:text="Education certificates"
                android:background="@android:color/transparent"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivdegree_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_51sdp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:padding="@dimen/_1sdp"
                android:visibility="invisible"
                android:src="@drawable/upload_file"/>
            <ImageView
                android:id="@+id/ivdegree_2"
                android:layout_width="0dp"
                android:layout_height="@dimen/_51sdp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:padding="@dimen/_1sdp"
                android:visibility="invisible"
                android:src="@drawable/upload_file"/>
            <ImageView
                android:id="@+id/ivdegree_3"
                android:layout_width="0dp"
                android:layout_height="@dimen/_51sdp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:padding="@dimen/_1sdp"
                android:visibility="invisible"
                android:src="@drawable/upload_file"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>