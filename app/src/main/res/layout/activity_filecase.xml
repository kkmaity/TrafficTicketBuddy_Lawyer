<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_header_view"
        layout="@layout/widget_header_view_backbutton"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:visibility="visible" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/alice_blue"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dodger_blue"
                android:fontFamily="@font/lato_regular"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Fill the following form below to launch a new case "/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/txt_grey"
                    android:textSize="@dimen/_11sdp"
                    android:layout_gravity="center"

                    android:text="Upload front image of ticket:"/>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="2dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/cardview_light_background"
                    android:layout_height="@dimen/_60sdp">

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:layout_gravity="center"
                           android:gravity="center"
                           android:id="@+id/linFontImage"
                           android:orientation="vertical">
                           <ImageView
                               android:layout_width="@dimen/_23sdp"
                               android:layout_height="@dimen/_23sdp"
                               android:layout_gravity="center"
                               android:src="@drawable/camera_logo"/>
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textSize="@dimen/_10sdp"
                               android:text="TAKE PICTURE"
                               android:fontFamily="@font/lato_regular"
                               android:textColor="@color/hint_grey"/>

                       </LinearLayout>
                       <ImageView
                           android:id="@+id/ivFontImage"
                           android:visibility="gone"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"

                           android:scaleType="centerCrop"/>
                   </RelativeLayout>

                </android.support.v7.widget.CardView>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/txt_grey"
                    android:textSize="@dimen/_11sdp"
                    android:text="Upload back image of ticket:"
                    />

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:cardElevation="3dp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    app:cardCornerRadius="2dp"
                    app:cardBackgroundColor="@color/cardview_light_background"
                    android:layout_height="@dimen/_60sdp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/linBackImage"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/_23sdp"
                                android:layout_height="@dimen/_23sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/camera_logo"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_10sdp"
                                android:text="TAKE PICTURE"
                                android:fontFamily="@font/lato_regular"
                                android:textColor="@color/hint_grey"/>

                        </LinearLayout>
                        <ImageView
                            android:id="@+id/ivBackImage"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:scaleType="centerCrop"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/txt_grey"
                    android:textSize="@dimen/_11sdp"
                    android:text="Upload driving lisence:"/>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="2dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/cardview_light_background"
                    android:layout_height="@dimen/_60sdp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/linDrivingLiImage"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/_23sdp"
                                android:layout_height="@dimen/_23sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/camera_logo"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_10sdp"
                                android:text="TAKE PICTURE"
                                android:fontFamily="@font/lato_regular"
                                android:textColor="@color/hint_grey"/>

                        </LinearLayout>
                        <ImageView
                            android:id="@+id/ivDrivingLiImage"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:background="@drawable/input_box"
                android:layout_gravity="center"
                android:gravity="center"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:padding="@dimen/_5sdp"
                    android:text="In which province you have got the tickets:"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/txt_grey"
                  />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="5"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/etState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/txt_grey"
                        android:focusableInTouchMode="false"
                        android:focusable="false"
                        android:textSize="@dimen/_11sdp"
                        android:hint="--Province--"
                        android:gravity="center"
                        android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
                        android:padding="@dimen/_5sdp"
                        android:background="@null">
                    </EditText>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/input_box"
                android:layout_marginRight="@dimen/_12sdp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/txt_grey"
                    android:textSize="@dimen/_11sdp"
                    android:text="In which City you have got the tickets:" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/etCity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/txt_grey"
                        android:textSize="@dimen/_11sdp"
                        android:hint="--City--"
                        android:gravity="center"
                        android:focusableInTouchMode="false"
                        android:focusable="false"
                        android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
                        android:padding="@dimen/_5sdp"
                        android:background="@null">
                    </EditText>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/txt_grey"
                    android:textSize="@dimen/_11sdp"
                    android:visibility="gone"

                    android:text="Description"/>
                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_11sdp"
                    android:fontFamily="@font/lato_regular"
                    android:background="@drawable/input_box"
                    android:textColor="@color/txt_grey"
                    android:textColorHint="@color/hint_grey"
                    android:inputType="textMultiLine"
                    android:maxLines="10"
                    android:maxLength="150"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:lines="4"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="--Enter your case description--"
                    />
                <!--<View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/black"></View>-->
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/cardSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:elevation="@dimen/_2sdp">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Submit"
                    android:gravity="center"
                    android:fontFamily="@font/lato_regular"
                    android:layout_gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:textSize="@dimen/_13sdp"

                    />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>